<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"

    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBarmap"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@android:color/white"
        app:title="Mini Map"


        app:titleTextColor="@color/colorPrimary" />
    <com.google.android.material.card.MaterialCardView
        android:layout_height="90dp"
        android:layout_below="@+id/topAppBarmap"
        android:layout_margin="9dp"

        android:layout_marginTop="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center_horizontal"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:cardElevation="2dp"
        android:id="@+id/cardvw"
        android:layout_marginBottom="6dp"

        android:clickable="true"
        android:focusable="true"
        android:checkable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/white"
            android:padding="10dp"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="3dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.40"


                    android:textAppearance="?attr/textAppearanceHeadline6"

                    android:padding="16dp"
                    android:text="IT Department"
                    android:textColor="@color/colorPrimary"
                    android:textSize="19sp" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.20"
                    android:padding="15dp"
                    android:id="@+id/NavigateIT"
                    android:src="@drawable/navi"
                    android:layout_height="match_parent"/>
            </LinearLayout>





        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_height="90dp"

        android:layout_margin="9dp"

      android:layout_below="@+id/cardvw"
        android:id="@+id/cardcivil"

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center_horizontal"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:cardElevation="2dp"


        android:clickable="true"
        android:focusable="true"
        android:checkable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/white"
            android:padding="10dp"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="3dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.40"


                    android:textAppearance="?attr/textAppearanceHeadline6"

                    android:padding="16dp"
                    android:text="Civil Department"
                    android:textColor="@color/colorPrimary"
                    android:textSize="19sp" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.20"
                    android:padding="15dp"
                    android:id="@+id/NavigateCIVIL"
                    android:src="@drawable/navi"
                    android:layout_height="match_parent"/>
            </LinearLayout>





        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>









</RelativeLayout>