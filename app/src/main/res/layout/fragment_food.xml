<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"

    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBarfood"
        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@android:color/white"
        app:title="Food Ordering"



        app:titleTextColor="@color/colorPrimary" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvforfood"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topAppBarfood"
        android:background="@android:color/white" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:elevation="4dp"
        android:id="@+id/fabfood"
        android:visibility="visible"

        android:src="@drawable/ic_free_breakfast_black_24dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@android:color/white"
        android:layout_margin="30dp"
        android:layout_alignParentRight="true"

        app:fabCustomSize="55dp" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:lottie_rawRes="@raw/nofood"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>



</RelativeLayout>